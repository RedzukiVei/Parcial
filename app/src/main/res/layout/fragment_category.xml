<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/Fondo2">
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige la categoría"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginTop="16dp">
    <Button
        android:id="@+id/literatureButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Literatura"
        android:layout_marginBottom="16dp"
        />
    <Button
        android:id="@+id/mathematicsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Matemáticas"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/generalCultureButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Cultura General"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/englishButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Inglés"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/videoGamesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Videojuegos"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/riddlesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Adivinanzas"
        android:layout_marginBottom="16dp"/>
    </GridLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondo4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:text="Easter Egg" />
    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excelente"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="238dp"
        android:layout_height="345dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/excellent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ProgressBar
            android:id="@+id/resultProgressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/resultPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:layout_gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/wrongQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preguntas incorrectas:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/rightQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preguntas correctas:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a intentar"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@color/purple_200"/>

    <Button
        android:id="@+id/chooseCategoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir categorÃ­a"
        android:layout_marginTop ="16dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@color/purple_200"/>
</LinearLayout>